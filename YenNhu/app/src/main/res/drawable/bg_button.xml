<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Hình chữ nhật phía sau (màu đen) -->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="180dp"
                android:height="45dp"/>
            <stroke android:width="1dp" android:color="@color/black"/>
            <solid android:color="#000000"/> <!-- Màu đen -->
            <corners android:radius="20dp"/> <!-- Bo góc cho đẹp hơn -->
        </shape>
    </item>

    <!-- Hình chữ nhật phía trước (Button) -->
    <item android:bottom="4dp" android:right="4dp"> <!-- Đẩy hình chữ nhật lên trên -->
        <shape android:shape="rectangle">
            <size
                android:width="180dp"
                android:height="40dp"/>
            <solid android:color="#FFFFFF"/> <!-- Màu tím (thay đổi nếu muốn) -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

</layer-list>
