<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/br1"
    android:padding="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập thông tin sinh viên"
        android:fontFamily="cursive"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:textColor="#BD146C"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"/>
    <EditText
        android:id="@+id/et_msv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã sinh viên"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/et_hoten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Họ và tên"
        android:padding="10dp"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />
    <CheckBox
        android:id="@+id/cb_remeber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu thông tin"
        android:textSize="18dp"
        android:textColor="#581464"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textMsv"
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textColor="#581464"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textHoten"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:textColor="#581464"
        android:layout_height="wrap_content"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >
    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="70dp"
        android:text="Save"
        android:textAllCaps="false"
        android:backgroundTint="#ffffff"
        android:textSize="25dp"
        android:textColor="#E04397"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_showinf"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="70dp"
        android:text="Show Inf"
        android:textAllCaps="false"
        android:backgroundTint="#ffffff"
        android:textSize="25dp"
        android:textColor="#E04397"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>
</LinearLayout>


</LinearLayout>
